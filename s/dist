#!/usr/bin/env bash
set -e
cd "$(dirname "$0")/.."
s/clean

echo "module: TypeScript -> ES2015 module"
node_modules/.bin/tsc \
    --outDir dist/es2015 \
    --target ES2015 \
    --module es2015 \
    --lib es2015 \
    --sourceMap \
    --strict \
    --declaration \
    src/Parsinator.ts

echo "module: TypeScript -> ES2015 commonjs"
node_modules/.bin/tsc \
    --outDir dist/es2015-commonjs \
    --target ES2015 \
    --module commonjs \
    --lib es2015 \
    --sourceMap \
    --strict \
    --declaration \
    src/Parsinator.ts
