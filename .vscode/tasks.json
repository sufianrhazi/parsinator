{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "tsc",
            "command": "tsc",
            "args": ["-p", "."],
            "isShellCommand": true,
            "isBuildCommand": true,
            "showOutput": "silent",
            "problemMatcher": "$tsc"
        },
        {
            "taskName": "bundle",
            "command": "node_modules/.bin/browserify",
            "args": ["build/tsc/main.js", "-o", "build/bundle.js"],
            "isShellCommand": true,
            "isBuildCommand": true,
            "showOutput": "always"
        }
    ]
}